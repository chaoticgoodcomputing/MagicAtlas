<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Reduce output noise -->
    <ResultsDirectory>./TestResults</ResultsDirectory>
    <CollectSourceInformation>false</CollectSourceInformation>
  </RunConfiguration>

  <LoggerRunSettings>
    <Loggers>
      <!-- Use console logger with minimal output -->
      <Logger friendlyName="console" enabled="True">
        <Configuration>
          <Verbosity>minimal</Verbosity>
        </Configuration>
      </Logger>
    </Loggers>
  </LoggerRunSettings>

  <NUnit>
    <!-- Stop on first failure for quick feedback during development -->
    <StopOnError>false</StopOnError>
    <!-- Limit stack trace depth -->
    <MaxStackTraceLines>3</MaxStackTraceLines>
  </NUnit>
</RunSettings>
